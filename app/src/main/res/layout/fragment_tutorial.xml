<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ucdenver.edu.bb3android.DashboardActivity$PlaceholderFragment"
    android:id="@+id/aboutUsTable">

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_weight="0.17">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is BB3?"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/login_form"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Dashboard?"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How can I set goals?"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do I earn points?"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do I track points?"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to earn badges?"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to change password?"
        android:id="@+id/button14"
        android:layout_below="@+id/button13"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to access facebook page?"
        android:id="@+id/button15"
        android:layout_below="@+id/button14"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How can I view messages?"
        android:id="@+id/button16"
        android:layout_below="@+id/button15"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to save favorite messages?"
        android:id="@+id/button17"
        android:layout_below="@+id/button16"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other questions?"
        android:id="@+id/button18"
        android:layout_below="@+id/button17"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_form" />


</RelativeLayout>
