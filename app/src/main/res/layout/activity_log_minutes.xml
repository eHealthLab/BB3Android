<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ucdenver.edu.bb3android.LogMinutesActivity">

    <TextView android:text="You currently have blah points. Log minutes to earn more points." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/logMinutes_array"
        android:id="@+id/spinner">

    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button21"
        android:layout_marginBottom="136dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignParentStart="true" />


</RelativeLayout>
