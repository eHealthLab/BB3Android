<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ucdenver.edu.bb3android.GoalsActivity">

    <TextView android:text="Select your goals from below." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />


    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:entries="@array/daysPerWeek_array"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="106dp" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button22"
        android:layout_marginBottom="136dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/spinner3" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:entries="@array/minutesPerDay_array"
        android:layout_alignTop="@+id/spinner2"
        android:layout_toEndOf="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/spinner3"
        android:layout_alignEnd="@+id/spinner2"
        android:layout_alignParentStart="true"
        android:text="Days/Week" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_above="@+id/spinner3"
        android:layout_alignStart="@+id/spinner3"
        android:layout_alignEnd="@+id/spinner3"
        android:text="Minutes/Day" />


</RelativeLayout>
